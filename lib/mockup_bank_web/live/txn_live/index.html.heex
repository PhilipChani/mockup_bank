<.modal :if={@live_action in [:credit]} id="credit-modal" show on_cancel={JS.patch(~p"/")}>
  <.live_component
    module={MockupBankWeb.Components.Credit}
    id={:credit}
    title={@page_title}
    action={@live_action}
    patch={~p"/mesages/credit"}
  />
</.modal>

